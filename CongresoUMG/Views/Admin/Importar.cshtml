@{
    ViewData["Title"] = "Importar Participantes desde Excel";
}

<h2>Importar Participantes (.xlsx)</h2>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">@ViewBag.Mensaje</div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="archivo" class="form-label">Archivo Excel (.xlsx)</label>
        <input type="file" name="archivo" class="form-control" accept=".xlsx" required />
    </div>
    <button type="submit" class="btn btn-primary">Importar</button>
</form>

<p class="mt-3 text-muted">
    Asegúrate de que el archivo tenga los siguientes encabezados:<br />
    <code>carne, nombrecompleto, dpi, telefono, correoelectronico, cicloosemestre</code>
</p>

